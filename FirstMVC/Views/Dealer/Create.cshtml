@model FirstMVC.Models.Dealer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dealer</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="active">Dealer Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DealerName, new {htmlAttributes = new {@class = "form-control"}})
            </div>
        </div>
        
        <div class="form-group">
            <label class="active">Dealer Info</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DealerInfo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="active">Address</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="active">Phone</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="active">Fax</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="active">Email</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/inputmask")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Phone").inputmask("(999) 999-9999");
            $("#Fax").inputmask("(999) 999-9999");
            
        });



       
    </script>
}

