@model FirstMVC.Models.Dealer

@{
    ViewBag.Title = "Details";
}

<h1 class="center indigo-text">Profile for Dealer [@Html.DisplayFor(model => model.DealerName)]]</h1>

<div>
    <div class="row">
        <div class="col s6">
            <a class="waves-effect waves-yellow btn green" href="#add_new"><i class="material-icons left">print</i>Print Pre-approval Letter</a>
        </div>
        @*<div class="col s6 right-align">
            <a class="waves-effect waves-yellow btn-flat grey lighten-3" href="#add_new"><i class="material-icons left">edit</i>Edit</a>
        </div>*@
    </div>
    <div class="card">
        <div class="card-content">
            <span class="card-title indigo-text">Dealer Information</span>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(model => model.DealerName, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="DealerName">Dealer Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(model => model.DealerInfo, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="DealerInfo">Dealer Info</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(model => model.Address, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="Address">Address</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    @Html.TextBoxFor(model => model.Phone, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="Phone">Phone</label>
                </div>
                <div class="input-field col s12 m6">
                    @Html.TextBoxFor(model => model.Fax, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="Fax">Fax</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    @Html.TextBoxFor(model => model.Email, new Dictionary<string, object>() { { "readonly", "true" } })
                    <label for="Email">Email</label>
                </div>
            </div>
        </div>
    </div>


</div>
@if ((int)Session["UserRole"] == 0)
{
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

}
else
{
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>

}


